<!DOCTYPE html>

<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>
        <%= artist_data[0].artist %>'s Worst Rap Lyrics
    </title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
</head>

<body>
    <div class="container">
        <a href='/'>home</a>
        <h1>Bad <%= artist_data[0].artist %> lyrics</h1>
        
        <div id='artist-feed-clean'>
            <% for(var i=0; i<artist_data.length; ++i) { %>
                <% if(artist_data[i].explicit !== true) { %>
                    <div style='background-color: #f2f2f2; padding: 10px; margin-bottom: 10px;'>
                        <i>"<%= artist_data[i].lyrics %>"</i>
                        <br>
                        <span>- <%= artist_data[i].song %> (<%= artist_data[i].release_date %>)</span>
                    </div>
                <% } %>
            <% } %>
        </div>

       

        <% if(has_explicit_songs) { %>
            <input class="form-check-input" type="checkbox" id="explicit-filter">
            <label class="form-check-label" for="explicit-filter">
                Show explicit songs
            </label>

            <div id='artist-feed-explicit'>
               
    
            </div>

            <script>
                const explicitCheckbox = document.getElementById('explicit-filter');
                const artistFeed = document.getElementById('artist-feed-explicit');
                //show spinner while loading data
                const loading = document.createElement('div');
                loading.setAttribute('class', 'spinner-border');
                loading.setAttribute('role', 'status');
                loading.setAttribute('id', 'loading-icon');
            
                async function explicitFilter(x) {
                    console.log('clicked explicit filter!');
                    console.log('show explicit songs - ' + x)
        
                    //SHOW EXPLICIT
                    if(x == true) {
                        artistFeed.innerText = '';
                        artistFeed.appendChild(loading);
                        var explicitSongs = await fetch('/api/getartistfeed?artist=<%= artist_data[0].artist_query %>&explicit=true');
                        explicitSongs = await explicitSongs.json();
                        loading.remove();

                        console.log(explicitSongs);

                        //append all explicit songs to artist-feed
                        for(var i=0; i<explicitSongs.artist_feed.length; ++i) {
                            const lyricDiv = document.createElement('div');
                            lyricDiv.style.backgroundColor = '#f2f2f2';
                            lyricDiv.style.padding = '10px';
                            lyricDiv.style.marginBottom = '10px'
                            const lyric = document.createElement('i');
                            lyric.innerText = '"' + explicitSongs.artist_feed[i].lyrics + '"';
                            lyricDiv.appendChild(lyric);
                            

                            var br = document.createElement('br');
                            var lyricDetails = document.createElement('span');
                            lyricDetails.innerText =  explicitSongs.artist_feed[i].song + " (" +  explicitSongs.artist_feed[i].release_date + ")";
                            lyricDiv.appendChild(br);
                            lyricDiv.appendChild(lyricDetails)
                            artistFeed.appendChild(lyricDiv);
                        }
                    }
                    //HIDE EXPLICIT
                    else {
                        artistFeed.innerText = '';
                        artistFeed.appendChild(loading)
                        var explicitSongs = await fetch('/api/getartistfeed?artist=<%= artist_data[0].artist_query %>&explicit=false');
                        explicitSongs = await explicitSongs.json();
                        loading.remove();
                        //artist has no songs that dont have explicit 
                        if(explicitSongs.artist_feed.length == 0) {
                            const x = document.createElement('p');
                            x.innerText = "All of <%= artist_data[0].artist %>'s lyrics are explicit"
                            x.style.color = 'red';
                            artistFeed.appendChild(x);
                        }
        
                        console.log(explicitSongs);
                    }
        
        
                }
        
                explicitCheckbox.addEventListener('change', (x) => {
                    explicitFilter(x.target.checked);
                })
        
        
            </script>
        <% } %>

        
        
        
      

    </div>
</body>

</html>